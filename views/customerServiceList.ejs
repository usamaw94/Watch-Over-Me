<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="userPanelAssets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="userPanelAssets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Paper Dashboard by Creative Tim</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="userPanelAssets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="userPanelAssets/css/animate.min.css" rel="stylesheet"/>

    <!--  Paper Dashboard core CSS    -->
    <link href="userPanelAssets/css/paper-dashboard.css" rel="stylesheet"/>


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="userPanelAssets/css/demo.css" rel="stylesheet" />

    <link href="userPanelAssets/css/custom.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="userPanelAssets/css/themify-icons.css" rel="stylesheet">

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="danger">

        <!--
            Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
            Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
        -->

        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text">
                    Watch Over ME
                </a>
            </div>

            <ul class="nav">
                    <li>
                        <a href="/userPanel">
                            <i class="ti-panel"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="/wearerServiceDetails">
                            <i class="ti-settings"></i>
                            <p>Service as Wearer</p>
                        </a>
                    </li>
                    <li>
                        <a href="servicesList.html">
                            <i class="ti-settings"></i>
                            <p>Services as Watcher</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/customerServiceList">
                            <i class="ti-settings"></i>
                            <p>Services as Customer</p>
                        </a>
                    </li>
                    <li>
                        <a href="/userProfile">
                            <i class="ti-user"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li>
                        <a href="/logout">
                            <i class="ti-close"></i>
                            <p>Logout</p>
                        </a>
                    </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="#">Services List</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#">
                                <i class="ti-user"></i>
                                <p><%= session.userName %></p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <%if (locals.data != '') { %>
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <p class="category">Services as</p>
                                <h4 class="title">Customer</h4>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>WOM Number</th>
                                        <th>Wearer Name</th>
                                        <th>No. of watchers</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% for(var d of data) {%>
                                    <tr>
                                        <td><%= d.serviceId %></td>
                                        <td><%= d.womNumber %></td>
                                        <td><span data-id="<%= d.wearers[0].person_id %>" class="showWearerDetails show-full-details"><%= d.wearers[0].person_first_name %> <%= d.wearers[0].person_last_name %></span></td>
                                        <td><span data-id="<%= d.serviceId %>" data-num-watcher="<%= d.numberOfWatchers %>" class="showWatcherDetails show-full-details"><%= d.numberOfWatchers %></span></td>
                                        <td><%= d.serviceStatus %></td>
                                        <td>
                                            <a class="btn btn-info" href="/customerServiceDetails?serviceID=<%= d.serviceId %>">View details</a>
                                        </td>
                                    </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <% } else { %>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="content">
                                    <centre>
                                        <h3 class="text-center info" style="margin-bottom:20px; color: #F3BB45">User is not the customer for any service</h6>
                                    </centre>
                                </div>
                                    
                            </div>
                        </div>
                    </div>

                <% } %>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>

                        <li>
                            <a href="http://www.creative-tim.com">
                                Creative Tim
                            </a>
                        </li>
                        <li>
                            <a href="http://blog.creative-tim.com">
                                Blog
                            </a>
                        </li>
                        <li>
                            <a href="http://www.creative-tim.com/license">
                                Licenses
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Creative Tim</a>
                </div>
            </div>
        </footer>

    </div>
</div>

<div class="modal fade" id="wearerDetailsModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-custom-title modal-title">Wearer Details</span>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-responsive">
                    <thead>
                    <tr>
                        <th>Wearer_ID:</th>
                        <td id="modalWearerId"></td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td id="modalWearerName"></td>
                    </tr>
                    <tr>
                        <th>Phone Number:</th>
                        <td id="modalWearerPhone"></td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td id="modalWearerEmail"></td>
                    </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="watcherDetailsModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-custom-title modal-title">Watcher Details</span>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h6>Total watchers : <span id="modalTotalWatchers"></span></h6>
                <table class="table table-striped table-responsive">
                    <thead>
                    <tr>
                        <th>Watcher_ID:</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                    </thead>
                    <tbody id="watcherDataRows">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


</body>

