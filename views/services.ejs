              </div>
            </div>
          </div>
  
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Services List</h3>
            </div>
            <div class="card-body">
              <table style="width: 100%" class="table table-responsive-lg table-striped">
                <tr>
                  <th>Service Id</th>
                  <th>WOM number</th>
                  <th>Wearer Name</th>
                  <th>Customer Name</th>
                  <th>No. of watchers</th>
                  <th>Status</th>
                  <th></th>
                </tr>

                <% for(var d of data) {%>
                <tr>
                  <td><%= d.serviceId %></td>
                  <td><%= d.womNumber %></td>
                  <td><span data-id="<%= d.wearers[0].person_id %>" class="showWearerDetails show-full-details"><%= d.wearers[0].person_first_name %> <%= d.wearers[0].person_last_name %></span></td>
                  <td><span data-id="<%= d.customers[0].person_id %>" class="showCustomerDetails show-full-details"><%= d.customers[0].person_first_name %> <%= d.customers[0].person_last_name %></span></td>
                  <td><span data-id="<%= d.serviceId %>" data-num-watcher="<%= d.numberOfWatchers %>" class="showWatcherDetails show-full-details"><%= d.numberOfWatchers %></span></td>
                  <td><%= d.serviceStatus %></td>
                  <td><a href="/serviceDetails?serviceID=<%=d.serviceId %>" class="btn btn-primary">Details</button></td>
                </tr>
                <% } %>
              </table>
            </div>
          </div>
          </div><!-- /.container-fluid -->
      </section>
